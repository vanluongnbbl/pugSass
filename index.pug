mixin homeCard(homeCardData)
    .homeCard
        h3.home-cards__title= homeCardData.title
        p.home-cards__desc= homeCardData.desc
        a(href="#")= homeCardData.text

mixin list(...items)
    each item in items
        li.links__item
            a(href="#")= item

mixin footer(...items)
    each item in items
        li.footer__item
            a(href="#")= item

